<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Lose 5 pounds" />

        <TextView
            android:id="@+id/goal_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tool:text="by: August 31, 2017" />

        <TextView
            android:id="@+id/goal_wager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tool:text="wagered: 100" />

        <TextView
            android:id="@+id/goal_encouragement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tool:text="'you can do it!'" />
    </LinearLayout>

    <TextView
        android:id="@+id/goal_referee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:contentDescription="@string/access_profile"
        android:drawableTop="@color/colorAccent"
        tool:text="Chris" />
</LinearLayout>